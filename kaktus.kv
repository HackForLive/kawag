#:kivy 2.1.0
<KaktusUI>:
    random_label: random_label
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "NeuralRandom"
            font_size: 64
            color: 0.92, 0.45, 0
        Label:
            id: random_label
            text: "-"
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
        Button:
            text: "Generate"
            font_size: 32
            size: 100, 50
            on_press: root.generate_number()