#:kivy 2.3.0

MDScreen:
    FitImage:
        source:"img/background.png"
    BoxLayout:
        orientation: "vertical"
    MDSegmentedControl:
        id: seg_options
        on_active: app.enable_or_disable_notification(*args)
        MDSegmentedControlItem:
            id: sci_off
            text: "Off"
        MDSegmentedControlItem:
            id: sci_on
            text: "On"
