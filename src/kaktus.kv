#:kivy 2.1.0

MDScreen:
    FitImage:
        source:"img/background.png"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        # height: 10
        # size_hint: (1, None)
        
        BoxLayout:
            orientation: "horizontal"
            # size: root.width, root.height
            # height: 200
            padding:[0]
            size_hint: (1, None)
            canvas:
                Color:
                    rgb: 34, 139, 34
                Rectangle:
                    size: self.size
                    pos:self.pos
            Label:
                id: word_label
                size_hint: (1, None)
                text_size: self.size
                halign: "center"
                valign: "center"
                text: "Enable Notification"
                font_size: 20
                padding:[5,5]
                color: "black"

            CheckBox:
                size_hint: (1, None)
                font_size: 20
                color: "black"
                halign: "center"
                valign: "center"
                on_active: app.enable_or_disable_notification(self.active)
                